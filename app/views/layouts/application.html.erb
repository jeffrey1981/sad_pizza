<!DOCTYPE html>
<html>
<head>
  <title>SadPizza</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

 <p>
  <% if current_user %>
    <%= link_to "GET CHEESY #{current_user.name}", user_path(current_user) %>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <%= link_to 'Logout', session_path('bye'), method: :delete %>
  <% else %>
    <%= link_to 'login', login_path %>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <%= link_to 'sign up', new_user_path %>
  <% end %>
</p>

<%= yield %>

</body>
</html>
